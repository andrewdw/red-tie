{
  "name": "red-tie",
  "version": "1.0.0",
  "description": "A full-featured Reddit client for Mac, Windows or Linux.",
  "main": "main.js",
  "scripts": {
    "typings-install": "./node_modules/.bin/typings install",
    "postinstall": "npm run typings-install",
    "build": "./node_modules/.bin/webpack --inline --colors --progress --display-error-details --display-cached",
    "build:prod": "./node_modules/.bin/webpack --progress --profile --colors --display-error-details --display-cached --optimize-occurence-order --optimize-dedupe",
    "build:dist": "npm run build:prod && npm run electron",
    "start": "./node_modules/.bin/webpack-dev-server --inline --colors --progress --display-error-details --display-cached --port 3333  --content-base app",
    "electron": "npm run build && electron app",
    "package": "./node_modules/electron-packager/cli.js app App --platform=win32 --arch=all --out=dist --overwrite --version='1.2.5'",
    "pack-linux": "electron-packager . --asar --asar-unpack=protocol-link.html --overwrite --platform=linux --arch=x64 --prune=true --out=out",
    "test": "mocha tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewdw/red-tie.git"
  },
  "keywords": [
    "reddit",
    "app",
    "client",
    "mac",
    "windows",
    "linux",
    "cross-platform"
  ],
  "author": "Andrew Dillion-Walshe",
  "license": "CC-BY-NC-4.0",
  "bugs": {
    "url": "https://github.com/andrewdw/red-tie/issues"
  },
  "homepage": "https://github.com/andrewdw/red-tie#readme",
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/forms": "2.0.0",
    "@angular/http": "2.0.0",
    "@angular/platform-browser": "2.0.0",
    "@angular/platform-browser-dynamic": "2.0.0",
    "@angular/router": "3.0.0",
    "core-js": "^2.4.1",
    "rxjs": "5.0.0-beta.12",
    "webpack-target-electron-renderer": "^0.4.0",
    "zone.js": "^0.6.23"
  },
  "devDependencies": {
    "angular2-template-loader": "^0.4.0",
    "awesome-typescript-loader": "^2.2.4",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "css-loader": "^0.23.1",
    "electron": "^1.4.2",
    "electron-packager": "^8.1.0",
    "electron-prebuilt": "^1.4.3",
    "es6-promise": "^4.0.5",
    "es6-shim": "^0.35.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "mocha": "^3.1.2",
    "node-sass": "^3.10.1",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.8",
    "sass-loader": "^4.0.2",
    "source-map-loader": "^0.1.5",
    "spectron": "^3.4.0",
    "style-loader": "^0.13.1",
    "typescript": "^2.0.2",
    "typings": "^1.3.2",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.14.0"
  }
}
